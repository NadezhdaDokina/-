def count_vowels(s, index=0):
    """
    Рекурсивная функция подсчёта гласных букв в строке.
    
    Параметры:
        s (str): входная строка
        index (int): текущий индекс обрабатываемого символа (по умолчанию 0)
    Возвращает:
        int: количество гласных букв в строке
    """
    # Базовый случай: достигли конца строки
    if index >= len(s):
        return 0
    
    # Проверяем, является ли текущий символ гласной
    current_char = s[index].lower()
    is_vowel = current_char in 'aeiou'
    
    
    # Рекурсивный случай:
    # Если текущий символ — гласная, прибавляем 1 к результату рекурсивного вызова
    if is_vowel:
        return 1 + count_vowels(s, index + 1)
    else:
        # Иначе просто продолжаем рекурсию без прибавления
        return count_vowels(s, index + 1)



# Пример использования
if __name__ == "__main__":
    # Тестовые примеры
    test_strings = [
        "Hello World!",
        "Programming is fun",
        "xyz",
        "AEIOU",
        "",
        "The quick brown fox jumps over the lazy dog"
    ]
    
    for test_str in test_strings:
        result = count_vowels(test_str)
        print(f"Строка: '{test_str}' → Гласных: {result}")

Строка: 'Hello World!' → Гласных: 3
Строка: 'Programming is fun' → Гласных: 5
Строка: 'xyz' → Гласных: 0
Строка: 'AEIOU' → Гласных: 5
Строка: '' → Гласных: 0
Строка: 'The quick brown fox jumps over the lazy dog' → Гласных: 11
